#editorconfig
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = tab
indent_size = 1
trim_trailing_whitespace = false

[*.markdown]
indent_style = tab
indent_size = 1
trim_trailing_whitespace = false

[*.jade]
indent_style = tab
indent_size = 2
